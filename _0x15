#include <unistd.h>
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>
#include "holberton.h"

int _strlen(char *s);

int append_text_to_file(const char *filename, char *text_content)
{
    /*init varables*/
    int fd, len;

    /*look for the length of the text_content*/
    len = _strlen(text_content);

    /*test if filename is equal to null*/
    if (filename == NULL)
        return (-1);

    /*fd = open file and gie property flags and permissions */
    fd = open(filename, O_WRONLY | O_APPEND, 0600);
    if (fd == -1)
        return (-1);

    /*test is text content is same than null*/
    if (text_content == NULL)
        return (1);
    
    /*if when you write the content of text_content it doesnt
    equal to len in length, return -1*/
    if (write(fd, text_content, len) != len)
        return (-1);
    
    return (1);
}